            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boo!!"
                android:id="@+id/yeartxt"
                android:textSize="25dp"/>

            </LinearLayout>

        </RelativeLayout>




